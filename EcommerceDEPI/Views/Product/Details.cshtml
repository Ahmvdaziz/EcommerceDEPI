@using EcommerceDEPI.Models <!-- ✅ أضف هذا السطر في الأعلى -->
@model Product

<h2>@Model.Name</h2>
<img src="~/images/@(string.IsNullOrEmpty(Model.Picture) ? "default.jpg" : Model.Picture)"
     class="img-fluid mb-4" alt="@Model.Name">
<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Price:</strong> $@Model.Price</p>
<p><strong>Category:</strong> @Model.Category.Name</p>

<a href="#" class="btn btn-success">Add to Cart</a>
<a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Back to Products</a>
